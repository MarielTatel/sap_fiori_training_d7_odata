<mvc:View controllerName="sapips.training.odata.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Table id="idProductsTable"
               items="{
                    path: '/Products',
                    sorter: {
                        path: 'ProductName'
                    },
                    filters: [
                        { path: 'Discontinued', operator: 'NE', value1: true }
                    ]
               }" >
            <headerToolbar>
                <OverflowToolbar id="tableOFHeaderToolbar">
                    <Title id="idTableTitle" text="{i18n>tableTitle}" />
                </OverflowToolbar>
            </headerToolbar>
            <infoToolbar>
                <OverflowToolbar id="tableOFInfoToolbar">
                    <Label id="idInfoText" text="{i18n>tableInfoText}" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column id="idProductCol">
                    <Text id="idProductColText" text="{i18n>productCol}" />
                </Column>
                <Column id="idSupplierIdCol">
                    <Text id="idSupplierIdColText" text="{i18n>supplierIdCol}" />
                </Column>
                <Column id="idPriceCol">
                    <Text id="idPriceColText" text="{i18n>priceCol}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="idProductItems">
                    <cells>
                        <ObjectIdentifier 
                            id="idProductCell"
                            title="{ProductName}"
                            text="{i18n>priceIdText} {ProductID}" />

                        <Text 
                            id="idSupplierIdCell"
                            text="{SupplierID}" />

                        <ObjectIdentifier 
                            id="idPriceCell"
                            title="{UnitPrice}"
                            text="{QuantityPerUnit}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>